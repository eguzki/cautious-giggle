<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Kuadrant Dashboard Template</title>
        <style>
        .container {
            width: 70%;
            margin: auto;
        }
        .i8 {
            padding: 10px;
        }
        .i9 {
            padding: 10px;
            text-align: center;
        }
        .nav {
            padding: 10px;
            text-align: center;
        }
        .nav a {
            padding: 3px 8px;
        }
        .apiTable{
            display: table;
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 2em;
        }
        .apiTableHeading{
            display: table-header-group;
            font-weight: bold;
        }
        .apiTableHead{
            display: table-cell;
        }
        .apiTableCell{
            display: table-cell;
            padding: 3px 10px;
        }
        .apiTableRow{
            display: table-row;
        }
        .actionGwMissing{
            color: red
        }
        .actionGwFound{
            color: green
        }
        #newapiform {
          float: right;
        }
        Body {
          font-family: Calibri, Helvetica, sans-serif;
          background-color: lightblue;
        }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="i8">
                <center><h1>MY APIs</h1></center>
            </div>
            <div class="nav">
                <a href="/users">My API Consumers</a>
            </div>
            <div class="i9">
                <form id="newapiform" action="/servicediscovery">
                    <button type="submit">Setup my API with Kuadrant</button>
                </form>
            </div>
            <div class="apiTable">
                <div class="apiTableHeading">
                    <div class="apiTableHead">Name</div>
                    <div class="apiTableHead">Description</div>
                    <div class="apiTableHead">Action</div>
                </div>
                {{range .APIs }}
                <div class="apiTableRow">
                    <div class="apiTableCell"><a href="/api?id={{ .Name }}">{{ .Name }}</a></div>
                    <div class="apiTableCell">{{ .Description }}</div>
                    <div class="apiTableCell"><div class="{{if .GwLinked }}actionGwFound{{else}}actionGwMissing{{end}}">{{ .Action }}</div></div>
                </div>
                {{end}}
            </div>
        </div>
    </body>
</html>
